<% layout("/layouts/boilerplate")%>

 <div class="row mt-3">
        <div class="col-8 offset-3"> 
         
    <div class="card col-8  show-card listing-card">
      <h3><b><%=hotel.title%></b></h3>
      <img src="<%= hotel.image.url%>" class="card-img-top show-img" alt="Listing_image"/>
      <div class="card-body">
         <p class="card-text mt-1 mb-0">
          <p>Owned by <i><%=hotel.owner.username%></i>.</p>
         
          <p><%=hotel.description%></p>
          <p> Price : &#8377 <%=hotel.price.toLocaleString("en-IN")%>/per night</p>
          <p> Location : <%=hotel.location%></p>
          <p>Country : <%=hotel.country%></p>
         
         </p>
        
         <div class="col1">
             <form method="Get" action="/Listings/<%=hotel._id%>/edit">
              <button class="btn btn-dark add-btn" >Edit</button>
             </form>
         <!-- ?_method=DELETE"> -->
       
         <form  method="get" action="/Listings/<%=hotel._id%>/delet">
          <button class="btn btn-dark add-btnn" >Delete</button>
         </form>
        </div>   <br>

        <hr><br>

        <div class="col-8  mb-3 revform">
           <h4 class="offset-4"> <b>Leave a Review</b></h4></b><br>
            <form action="/Listings/<%=hotel._id%>/reviews" method="post" novalidate class="needs-validation">
             <!-- <div class="mb-3">
               <label for="rating"  class="form-label">Rating :</label><br>
              <input type="range" min="1" max="5" id="rating" name="review[rating]" "> 
             </div> -->
              <div class="mb-3">
                <label for="rating"  class="form-label">Rating :</label><br>
                <fieldset class="starability-slot">
                 
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset> </div>
           <div class="mb-3">
               <label for="comment"  class="form-label">Add a Comment</label>
              <textarea name="review[comment]" id="comment" rows="6" cols="30" class="form-control" required></textarea>
              <div class="invalid-feedback">Enter a valid comment !</div><br>
           </div >
           <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </div>
        <hr>
        <div class="mb-4 mt-5" >
          <h4><b>All Reviews </b></h4>
            <div class="row">
           <% for(review of hotel.reviews){%>
            <div class="card col-10 mb-4  ms-3 " >
               <div class="card-header">
             
                    <i> Review by : <%=review.author.username%></i> 
                  
                </div>
                <div class="card-body">
                
  <p class="starability-result" data-rating=<%=review.rating%>>
   
  </p>
                  <p class="card-text"><%= review.comment %>.</p>
                </div>
                <form action="/Listings/<%=hotel._id%>/reviews/<%=review._id%>" method="post" >
                  <button class="btn btn-sm btn-dark mt-4 mb-3  ">Delete</button>
                </form>
            </div>
          <%}%></div>
        
      </div>
      </div>
    </div>
        



   
    
