<%layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-5 offset-2">
    <h2>Add your Hotel !</h2>
    <form method="Post" action="/Listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <!-- listing naam isliye diya kyuki wha pr req.body krne mein dikkat aa rhi thi -->
     <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input type="text" 
        name="listing[title]" 
        placeholder="Enter hotel name" 
        class="form-control"  required/> 
        <div class="valid-feedback">Title Looks Good!</div>
       
     </div>
  <div class="mb-3">
           <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]"
         class="form-control" required>
        </textarea>
  </div>
    
    <div class="mb-3">
               <label for="image" class="form-label"> Upload Image :</label>
        <input type="file" name="listing[image]"  class="form-control" required>
    </div>

<!-- type="number"  -->
        <div class="mb-3 col-md-4" >
             <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Enter price" class="form-control" required>
             <div class="invalid-feedback">Enter price in number!</div><br>
        </div>
       <div class="mb-3 col-8">
         <label for="country" class="form-label">Country</label>
         <input type="text" name="listing[country]" placeholder="Enter country name" class="form-control" required>
      
       </div> 
       <div class="mb-3 ">
           <label for="location" class="form-label">Location</label>
         <input type="text" name="listing[location]" placeholder="Enter hotel location" class="form-control" required>
       </div>

      
       <div class="mb-3">
 
        <button class="btn btn-dark add-btn">ADD</button>
        
    </form>
</div>
</div>